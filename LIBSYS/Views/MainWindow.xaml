<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LIBSYS.ViewModels;assembly=LIBSYS"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vmb="clr-namespace:LIBSYS.ViewModels.ViewModelBase"
        mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="540"
        x:Class="LIBSYS.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        WindowStartupLocation="CenterScreen"
        Title="LIBSYS">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="4*"/>
    </Grid.RowDefinitions>
    
    <Grid Grid.Row="0" Background="#4A6572">
      <Image Source="/Assets/LibSysWhite.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
    <UserControl Grid.Row="1" Content="{Binding CurrentView}"/>
  </Grid>

</Window>
