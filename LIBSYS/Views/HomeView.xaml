<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="960" d:DesignHeight="450"
             x:Class="LIBSYS.Views.HomeView">

  <Grid>
    <TextBlock Text="Home View" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    <Button Command="{Binding LoginCommand}" Content="Login" Width="100" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" IsEnabled="True"/>
  </Grid>
</UserControl>
