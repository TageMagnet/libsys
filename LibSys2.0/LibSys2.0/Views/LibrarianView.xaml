<UserControl x:Class="LibrarySystem.Views.LibrarianView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibrarySystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Top">
        <TabControl>
            <TabItem Margin="0,0,5,0" Grid.Column="0" Header="Böcker" Background="#F9AA33">
                <StackPanel Orientation="Horizontal">
                    <Grid>
                        <!--#region Grid Definitions-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!--#endregion-->
                        
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin=" 30 10 10 10">
                            <TextBox x:Name="BookTitle" Margin=" 5" />
                            <TextBox x:Name="BookDescription" Margin="5" />
                            <TextBox x:Name="BookAuthor" Margin="5" />
                            <TextBox x:Name="BookIsbn" Margin="5" />
                        </StackPanel>
                        <Button Grid.Row="4" Grid.Column="0" MaxHeight="40" Margin="5 10" Background="#F9AA33" Content="Lägg till bok" />
                        <Button Grid.Row="4" Grid.Column="1" MaxHeight="40" Margin="5 10" Background="#F9AA33" Content="Uppdatera"/>
                        <Button Grid.Row="4" Grid.Column="2" MaxHeight="40" Margin="5 10" Background="#F9AA33" Content="Rensa"/>
                        <!--<Border Grid.Row="1" Grid.Column="3" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="1"/>-->
                        <Separator Grid.Column="3" Grid.Row="1" Grid.RowSpan="4" BorderBrush="#344955" BorderThickness="1.5"/>
                        <ScrollViewer Grid.Row="1" Grid.Column="4" Grid.RowSpan="4" VerticalScrollBarVisibility="Visible" Margin="5" Height="300">
                            <Viewbox>
                                <ItemsControl x:Name="Control" ItemsSource="{Binding Books}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#344955" BorderThickness="1" CornerRadius="2" Margin="2">
                                                <Grid Margin="5">
                                                    <!--#region Grid Definitions-->
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <!--#endregion-->
                                                    
                                                    <TextBlock Text="{Binding title}" FontSize="20" FontWeight="DemiBold"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding description}" FontSize="15" FontWeight="DemiBold"/>
                                                    <Button Grid.Column="2" Content="Ta bort" Background="#F9AA33"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Viewbox>
                        </ScrollViewer>
                        <!--</Border>-->
                    </Grid>
                </StackPanel>
            </TabItem>
            <TabItem Margin="5,0" Header="E-böcker" Background="#F9AA33">
                <Grid >
                    <!--#region Grid Definitions-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--#endregion-->
                    <Button Margin="0,5" Foreground="#344955" Background="#F9AA33" Grid.Column="2" Grid.Row="1" Content="Lägg till ny E-bok"/>
                    <Button Margin="0,5" Foreground="#344955" Background="#F9AA33" Grid.Column="2" Grid.Row="2" Content="Ta bort bok"/>
                    <Button Margin="0,5" Foreground="#344955" Background="#F9AA33" Grid.Column="2" Grid.Row="3" Content="Ändra bok"/>
                </Grid>
            </TabItem>
            <TabItem Margin="5,0" Header="Seminarier" Background="#F9AA33">
                <Grid>
                    <!--#region Grid Definitions-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--#endregion-->

                    <Grid Margin="10">
                        <ListBox>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="100" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Title}" />
                                        <ProgressBar Grid.Column="1" Minimum="0" Maximum="100" Value="{Binding Completion}" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                    <Button Margin="0,5" Background="#F9AA33" Grid.Column="2" Grid.Row="1" Content="Lägg till"/>
                    <Button Margin="0,5" Background="#F9AA33" Grid.Column="2" Grid.Row="2" Content="Ta bort"/>
                    <Button Margin="0,5" Background="#F9AA33" Grid.Column="2" Grid.Row="3" Content="Ändra"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Viewbox>
</UserControl>
