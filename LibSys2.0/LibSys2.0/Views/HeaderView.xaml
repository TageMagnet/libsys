<UserControl x:Class="LibrarySystem.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibrarySystem.Views"
             xmlns:converters="clr-namespace:LibrarySystem.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:EmptyStringConverter x:Key="EmptyString"/>
    </UserControl.Resources>
    <Border Background="{StaticResource DarkBlueBrush}">
        <Grid>
            <!--#region Col-/Row Definintions -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region Go Home Button -->
            <Button Grid.Column="0" Grid.Row="1" Name="BtnIcon" 
                    Command="{Binding GoHome}"
                    CommandParameter="home"
                    Width="36" 
                    Padding="6,6" 
                    Content="{materialDesign:PackIcon Home}" 
                    ToolTip="Icon"/>
            <!--#endregion-->

            <!--#region Logotype -->
            <Image Grid.Column="1" Grid.Row="1"
                    Source="/Assets/LibSysWhite.png" 
                    Margin="0,0,0,0" 
                    RenderOptions.BitmapScalingMode="Fant" 
                    Stretch="Fill"  MaxWidth="64"/>
            <!--#endregion-->


            <Grid Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" x:Name="LoggedIn">
                <Grid.Style>
                    <Style TargetType="{x:Type Grid}">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoggedIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Value="true">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" MaxWidth="300" Text="{Binding CurrentLoggedInUserExtended.nickname, 
                            FallbackValue='Error', 
                            Converter={StaticResource EmptyString},
                            ConverterParameter='Jonathan JonathanJonathanJonathanJonathanJonathan',
                            UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                           VerticalAlignment="Center" Margin="10 0 0 0" FontWeight="DemiBold"/>
                <Button Grid.Column="1" HorizontalAlignment="Center" Content="{materialDesign:PackIcon Kind=Account,Size=25}"
                        materialDesign:ButtonAssist.CornerRadius="30" Width="50" Height="50" HorizontalContentAlignment="Center" Padding="1"
                        Command="{Binding GoToCustomerView}"/>
                <Button Grid.Column="2" HorizontalAlignment="Center" Content="{materialDesign:PackIcon Kind=Logout,Size=25}"
                        materialDesign:ButtonAssist.CornerRadius="30" Width="50" Height="50" HorizontalContentAlignment="Center" Padding="1"
                        Command="{Binding GoToCustomerView}"/>
            </Grid>
            
            <!--#region Navigation menu not logged in -->
            <Grid Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" x:Name="NotLoggedIn">
                <Grid.Style>
                    <Style TargetType="{x:Type Grid}">
                        <Setter Property="Visibility" Value="Hidden"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoggedIn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Value="true">
                                <Setter Property="Visibility" Value="Hidden"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Not logged in" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <!--<Border Grid.Column="0" Padding="4" Margin="22,0">
                    <StackPanel>

                        <TextBlock MaxWidth="96" Text="{Binding CurrentLoggedInUserExtended.role, 
                            FallbackValue='not logged in', 
                            Converter={StaticResource EmptyString},
                            ConverterParameter='not logged in',
                            UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                        <TextBlock MaxWidth="96" Text="{Binding CurrentLoggedInUserExtended.email, 
                            FallbackValue='-', 
                            Converter={StaticResource EmptyString},
                            ConverterParameter='-',
                            UpdateSourceTrigger=PropertyChanged}"/>

                    </StackPanel>
                </Border>-->

                <Button Grid.Column="1" 
                        Command="{Binding ByPassIntoBackend}" 
                        Content="{materialDesign:PackIcon Kind=SmileyDevil}"
                        Width="36"
                        Margin="0,0,12,0"
                        Padding="6,6"
                        />
                <Button Grid.Column="2" 
                        Command="{Binding GoToLogin}" 
                        Content="{materialDesign:PackIcon Login}"
                        Width="36"
                        Margin="0,0,12,0"
                        Padding="6,6"
                        />
                <Button Grid.Column="3" 
                        Command="{Binding GoToRegister}" 
                        Content="{materialDesign:PackIcon Register}" 
                        Width="36"
                        Margin="0,0,12,0"
                        Padding="6,6"
                        />
            </Grid>
            <!--#endregion-->

            <!--#region Bottom border shadow effect -->
            <Canvas Grid.ColumnSpan="3" Grid.Row="2">
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#15000000"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Canvas.Background>
            </Canvas>
            <!--#endregion-->

        </Grid>
    </Border>
</UserControl>
