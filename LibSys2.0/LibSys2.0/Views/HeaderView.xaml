<UserControl x:Class="LibrarySystem.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibrarySystem.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Border Background="{StaticResource DarkBlueBrush}">
        <Grid>
            <!--#region Col-/Row Definintions -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region Go Home Button -->
            <Button Grid.Column="0" Grid.Row="1" Name="BtnIcon" 
                    Command="{Binding GoHomeCommand}"
                    CommandParameter="home"
                    Width="36" 
                    Padding="6,6" 
                    Content="{materialDesign:PackIcon Home}" 
                    ToolTip="Icon"/>
            <!--#endregion-->

            <!--#region Logotype -->
            <Image Grid.Column="1" Grid.Row="1"
                    Source="/Assets/LibSysWhite.png" 
                    Margin="0,0,0,0" 
                    RenderOptions.BitmapScalingMode="Fant" 
                    Stretch="Fill"  MaxWidth="64"/>
            <!--#endregion-->

            <!--#region Navigation menu -->
            <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">


                <DockPanel>
                    <CheckBox x:Name="IsRegisteredUserCheckDummy" Visibility="Hidden" IsChecked="{Binding IsLoggedIn, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <CheckBox x:Name="IsRegisteredUserCheck" IsChecked="false"/>
                    <TextBlock Padding="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Text not shown" />
                                <Setter Property="Foreground" Value="PaleVioletRed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=IsRegisteredUserCheck, Path=IsChecked}" Value="True">
                                        <Setter Property="Text" Value="[Name of member]" />
                                        <Setter Property="Foreground" Value="LightGreen" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=IsRegisteredUserCheck, Path=IsChecked}" Value="False">
                                        <Setter Property="Text" Value="Not logged in!" />
                                        <Setter Property="Foreground" Value="Red" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>

                        </TextBlock.Style>
                    <!--<Run></Run>
                    <LineBreak/>
                    in as-->
                    </TextBlock>
                </DockPanel>


                <Button Command="{Binding LoginCommand}" 
                        Content="{materialDesign:PackIcon Login}"
                        Width="36"
                        Margin="0,0,12,0"
                        Padding="6,6"
                        />
                <Button Command="{Binding RegisterCommand}" 
                        Content="{materialDesign:PackIcon Register}" 
                        Width="36"
                        Margin="0,0,12,0"
                        Padding="6,6"
                        />
            </StackPanel>
            <!--#endregion-->

            <!--#region Bottom border shadow effect -->
            <Canvas Grid.ColumnSpan="3" Grid.Row="2">
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#15000000"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Canvas.Background>
            </Canvas>
            <!--#endregion-->

        </Grid>
    </Border>
</UserControl>
