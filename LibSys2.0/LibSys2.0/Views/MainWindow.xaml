<Window x:Class="LibSys2._0.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibSys2._0.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="920">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="4*"/>
    </Grid.RowDefinitions>


    <Grid Grid.Row="0" Background="#4A6572">
      <Image Source="/Assets/LibSysWhite.png" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
    <UserControl Grid.Row="1" Content="{Binding CurrentView}"/>
  </Grid>
</Window>
