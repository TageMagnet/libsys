            <!--#endregion-->

        <!--</StackPanel>-->

        <!--#region Pages -->
        <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Margin="0,65,0,0">
            <materialDesign:PackIcon Kind="ArrowLeft" Foreground="Red"/>
            <TextBlock>
                <Run Text="{Binding CurrentSearchPage,FallbackValue='0'}"/>
                <Span>/</Span>
                <Run Text="{Binding ResultsDividedPerPage,FallbackValue='0',UpdateSourceTrigger=PropertyChanged}"/>
             
            </TextBlock>
            <materialDesign:PackIcon Kind="ArrowRightBold" Foreground="Red"/>
            
        </StackPanel>
        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"
                   VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center"
                   FontSize="8"
                   Opacity="0.5"
                   Text="todo; filter search results with X number per page"/>
        <!--#endregion-->

    </Grid>
</UserControl>
