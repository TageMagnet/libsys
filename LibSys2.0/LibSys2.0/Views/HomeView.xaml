<UserControl x:Class="LibrarySystem.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibrarySystem"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        
        <Style x:Key="CustomButton" TargetType="Button">
            <Setter Property="Padding" Value="4,4"/>
            <Setter Property="Margin" Value="0"/>

            <Setter Property="FontSize" Value="18"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Background" Value="#1FFFFFFF"/>
                    <Setter Property="Foreground" Value="#42FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>

        <!--#region Grid Definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--SearchBox stuff-->
        <StackPanel Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" Orientation="Vertical">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 10, 0 ,0">
                <StackPanel  Orientation="Horizontal" >
                    <!--<TextBlock Text="Sök: " FontSize="15" FontWeight="DemiBold" Margin="0 0 0 0"/>-->
                    <TextBox x:Name="SearchField" Text="{Binding SearchFieldText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0 0 0 0" MinWidth="200" MaxWidth="500" FontSize="15"/>
                    <Button Name="SearchButton" Command="{Binding SearchCommand}" CommandParameter="{Binding Path=Text, ElementName=SearchField}" Content="{materialDesign:PackIcon Search}"
                            ToolTip="Search" materialDesign:ButtonAssist.CornerRadius="30" Width="35" Height="35" Padding="1"/>
                </StackPanel>
                <!--AutoComplete-->
                <StackPanel>
                    <ListView ItemsSource="{Binding AutoCompleteList}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <TextBlock Text="{Binding}">
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" Command="{Binding Path=DataContext.PasteToSearchBox, ElementName=SearchField}" CommandParameter="{Binding}"></MouseBinding>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                </WrapPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>


            <!--<StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock Text="{Binding SearchColumn,  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue='[SearchColumn]'}" FontSize="8" Padding="0"/>
                <materialDesign:Chip Content="title" FontSize="8" Padding="0" Command="{Binding SetSearchColumn}" CommandParameter="title"></materialDesign:Chip>
                <materialDesign:Chip FontSize="8" Padding="0">
                    <materialDesign:Chip.Content>
                        <TextBlock Text="author" TextDecorations="Strikethrough"/>
                    </materialDesign:Chip.Content>
                </materialDesign:Chip>
                <materialDesign:Chip Content="isbn" FontSize="8" Padding="0" Command="{Binding SetSearchColumn}" CommandParameter="isbn"/>
                <materialDesign:Chip Content="year" FontSize="8" Padding="0" Command="{Binding SetSearchColumn}" CommandParameter="year"/>
            </StackPanel>-->
        </StackPanel>


        <!--SearchResults-->
        <!--<StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="4" Margin="0,0,0,60" HorizontalAlignment="Center" >-->

            <!--Counter-->
            <WrapPanel Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 0 30 0">
                <TextBlock Text="Your search returned " FontSize="10"/>
                <TextBlock Text="{Binding SearchResultCount, FallbackValue='[0]'}" FontSize="10"/>
                <TextBlock Text=" results" FontSize="10"/>
            </WrapPanel>


            <!--#region Search Results -->
            <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="4" Margin="0,20,0,60" HorizontalAlignment="Center">
            <Viewbox>
                <ItemsControl x:Name="SearchResults" HorizontalContentAlignment="Center" ItemsSource="{Binding SearchResults}" MinHeight="300" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth2" Margin="5" Padding="10" MaxWidth="800" Height="170"  Width="500" x:Name="CardResult">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="0.2*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Viewbox Grid.Column="0" Grid.RowSpan="4" Width="100">
                                    <Image Source="{Binding cover, FallbackValue='https://marketplace.canva.com/EADaiDo2aSo/1/0/251w/canva-yellow-lemon-children-book-cover-Fb1rBcVIu2U.jpg'}"/>
                                </Viewbox>

                                <TextBlock Grid.Column="2" Grid.ColumnSpan="5" Grid.Row="0" Text="{Binding title}" FontSize="18"/>

                                <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.ColumnSpan="4" Grid.Row="1" VerticalAlignment="Top" Margin="-3 -24 0 0">
                                    <Label Content="Av: " FontSize="14" VerticalAlignment="Top" Margin="0 5 0 0"/>
                                        <TextBlock Text="{Binding Author.firstname}" FontSize="14" FontWeight="Light" Margin="0 5 5 0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Author.surname}" FontSize="14" FontWeight="Light" VerticalAlignment="Center" Margin="0 5 0 0"/>
                                </StackPanel>
                                
                                    
                                 <TextBlock Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="2" Text="{Binding description}"  TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Margin="0 5 0 0"/>





                                    <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="3" VerticalAlignment="Bottom">

                                        <Button x:Name="w"  Content="Låna" Command="{Binding Path=DataContext.LoanBookCommand, ElementName=SearchResults}" CommandParameter="{Binding}" />

                                        <TextBlock VerticalAlignment="Center" Margin="4 0 4 0" FontSize="12" Text="{Binding type}"/>

                                        <TextBlock VerticalAlignment="Center" Text="Antal: " Margin="2,0" FontSize="10">
                                            <Run Text="{Binding Total, FallbackValue='?'}"/>
                                        </TextBlock>

                                        <!--
                                            todo; Placeholder för antal tillgängliga böcker
                                            Text ska vara DuplicateCounter - Antal utlånade
                                        -->
                                        <TextBlock VerticalAlignment="Center" Text="Tillgängliga: " Margin="2,0" FontSize="10">
                                            <Run Text="{Binding Available, FallbackValue='?'}"/>
                                        </TextBlock>

                                        <!--
                                            todo; Placeholder => antal utlånade från database
                                        -->
                                        <TextBlock VerticalAlignment="Center" Text="Utlånade: " Margin="2,0" FontSize="10">
                                            <Run Text="{Binding UnAvailable, FallbackValue='?'}"/>
                                        </TextBlock>

                                    </StackPanel>
                                </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Viewbox>
        </ScrollViewer>
        <!--#endregion-->

        <!--</StackPanel>-->

        <!--#region Pages -->
        <StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Margin="0,-10,0,0">
            <materialDesign:PackIcon Kind="ArrowLeft" Foreground="Red"/>
            <TextBlock>
                <Run Text="{Binding CurrentSearchPage,FallbackValue='0'}"/>
                <Span>/</Span>
                <Run Text="{Binding ResultsDividedPerPage,FallbackValue='0',UpdateSourceTrigger=PropertyChanged}"/>
            </TextBlock>
            <materialDesign:PackIcon Kind="ArrowRightBold" Foreground="Red"/>
            
        </StackPanel>
        <!--<TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"
                   VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center"
                   FontSize="8"
                   Opacity="0.5"
                   Text="todo; filter search results with X number per page"/>-->
        <!--#endregion-->

    </Grid>
</UserControl>
