<UserControl x:Class="LibrarySystem.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibrarySystem.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style x:Key="CustomButton" TargetType="Button">
            <Setter Property="Padding" Value="4,4"/>
            <Setter Property="Margin" Value="0"/>

            <Setter Property="FontSize" Value="18"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Background" Value="#1FFFFFFF"/>
                    <Setter Property="Foreground" Value="#42FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>

        <!--#region Grid Definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--SearchBox stuff-->
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Orientation="Vertical">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 10, 0 ,0">
                <StackPanel  Orientation="Horizontal" >
                    <!--<TextBlock Text="Sök: " FontSize="15" FontWeight="DemiBold" Margin="0 0 0 0"/>-->
                    <TextBox x:Name="SearchField" Text="{Binding SearchFieldText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0 0 0 0" MinWidth="200" MaxWidth="500" FontSize="15"/>
                    <Button Name="SearchButton" Command="{Binding SearchCommand}" CommandParameter="{Binding Path=Text, ElementName=SearchField}" Content="{materialDesign:PackIcon Search}" ToolTip="Search"/>
                </StackPanel>
                <!--AutoComplete-->
                <StackPanel>
                    <ListView ItemsSource="{Binding AutoCompleteList}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <TextBlock Text="{Binding}">
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftClick"
                                                Command="{Binding Path=DataContext.PasteToSearchBox, ElementName=SearchField}" 
                                                          CommandParameter="{Binding}"></MouseBinding>
                                        </TextBlock.InputBindings>
                                    </TextBlock>
                                </WrapPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>


            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock Text="{Binding SearchColumn,  Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue='[SearchColumn]'}" FontSize="8" Padding="0"/>
                <materialDesign:Chip Content="title" FontSize="8" Padding="0" Command="{Binding SetSearchColumn}" CommandParameter="title"></materialDesign:Chip>
                <materialDesign:Chip FontSize="8" Padding="0">
                    <materialDesign:Chip.Content>
                        <TextBlock Text="author" TextDecorations="Strikethrough"/>
                    </materialDesign:Chip.Content>
                </materialDesign:Chip>
                <materialDesign:Chip Content="isbn" FontSize="8" Padding="0" Command="{Binding SetSearchColumn}" CommandParameter="isbn"/>
                <materialDesign:Chip Content="year" FontSize="8" Padding="0" Command="{Binding SetSearchColumn}" CommandParameter="year"/>
            </StackPanel>
        </StackPanel>


        <!--SearchResults-->
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="2" HorizontalAlignment="Center" >

            <!--Counter-->
            <WrapPanel>
                <TextBlock Text="Your search returned " FontSize="10"/>
                <TextBlock Text="{Binding SearchResultCount, FallbackValue='[0]'}" FontSize="10"/>
                <TextBlock Text=" results" FontSize="10"/>
            </WrapPanel>
            
            <!--#region Old -->
            <!--<ListView  ItemsSource="{Binding SearchResults}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="{Binding title}" FontSize="10"/>
                            <TextBlock Text=" (" FontSize="10"/>
                            <TextBlock Text="{Binding year}" FontSize="10"/>
                            <TextBlock Text=") " FontSize="10"/>
                            <TextBlock Text="{Binding author}" FontSize="10"/>
                            <TextBlock Text="{Binding isbn}" FontSize="10"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <!--#endregion-->

            <!--#region Search Results -->
            <ListBox x:Name="SearchResults" HorizontalContentAlignment="Center" ItemsSource="{Binding SearchResults}">
                <ListBox.ItemTemplate>
                    <!--#region DataTemplate -->
                    <DataTemplate>
                        <Border Margin="0,0,0,0"
                        MinWidth="560"
                        Padding="6,4"
                        BorderBrush="Black"
                        BorderThickness="0.15"
                        CornerRadius="2"
                        Background="{StaticResource WhiteBrush}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.35"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Column="0" Grid.RowSpan="3" MaxWidth="86" Margin="5,0" Source="https://marketplace.canva.com/EADaiDo2aSo/1/0/251w/canva-yellow-lemon-children-book-cover-Fb1rBcVIu2U.jpg"/>

                                <TextBlock Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="0" Text="{Binding title, FallbackValue='Harry Potter J.K Rowlings 1998'}" FontSize="18">
                                    <Run Text="{Binding Author.firstname}"/>
                                    <Run Text="{Binding Author.surname}"/>
                                </TextBlock>

                                <Button Grid.Column="1" Grid.Row="2"  Content="Låna" Margin="0,0,0,0"/>

                                <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1">
                                    <Span FontSize="12" FontWeight="Light">Ebook/Book</Span>
                                    <Span FontSize="12" FontWeight="Black">Ulånade</Span>
                                    <Span FontSize="12" FontWeight="Bold">0</Span>
                                    <Span FontSize="12" FontWeight="Thin">Tillgängliga</Span>
                                    <Span FontSize="12" FontWeight="Regular">0</Span>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                    <!--#endregion-->
                </ListBox.ItemTemplate>
                
            </ListBox>
            <!--#endregion-->


            <!--#region Visible Copy -->
            <ListBox HorizontalContentAlignment="Center">
                <Border Margin="0,0,0,0"
                        MinWidth="360"
                        Padding="6,4"
                        BorderBrush="Black"
                        BorderThickness="0.15"
                        CornerRadius="2"
                        Background="{StaticResource WhiteBrush}">
                    <Border.Effect>
                        <DropShadowEffect 
                            ShadowDepth="1" 
                            BlurRadius="2"
                            Opacity="0.35"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Image Grid.Column="0" Grid.RowSpan="3" MaxWidth="36" Margin="5,0"
                            Source="https://marketplace.canva.com/EADaiDo2aSo/1/0/251w/canva-yellow-lemon-children-book-cover-Fb1rBcVIu2U.jpg"/>
                        
                        <TextBlock Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="0" Text="{Binding title, FallbackValue='Harry Potter J.K Rowlings 1998'}" FontSize="16"/>

                        <Button Grid.Column="1" Grid.Row="2" Style="{StaticResource CustomButton}" Content="Låna" Margin="0,0,0,0"/>

                        <TextBlock Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1">
                            <Span FontSize="10" FontWeight="Light">Ebook/Book</Span>
                            <Span FontSize="10" FontWeight="Black">Ulånade</Span>
                            <Span FontSize="10" FontWeight="Bold">0</Span>
                            <Span FontSize="10" FontWeight="Thin">Tillgängliga</Span>
                            <Span FontSize="10" FontWeight="Regular">0</Span>
                        </TextBlock>
                    </Grid>
                </Border>
            </ListBox>
            <!--#endregion-->
        </StackPanel>
    </Grid>
</UserControl>
