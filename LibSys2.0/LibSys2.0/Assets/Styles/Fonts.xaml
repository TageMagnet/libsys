<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LibrarySystem.Assets.Styles">
    
    <Style x:Key="TextExtraSmall" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="TextSmall" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="TextNormal" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="TextLarge" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style x:Key="TextExtraLarge" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="TextExtraSmallButton" TargetType="{x:Type Button}" BasedOn="{StaticResource TextExtraSmall}"/>
    <Style x:Key="TextSmallButton" TargetType="{x:Type Button}" BasedOn="{StaticResource TextSmall}"/>
    <Style x:Key="TextNormalButton" TargetType="{x:Type Button}" BasedOn="{StaticResource TextNormal}"/>
    <Style x:Key="TextLargeButton" TargetType="{x:Type Button}" BasedOn="{StaticResource TextLarge}"/>
    <Style x:Key="TextExtraLargeButton" TargetType="{x:Type Button}" BasedOn="{StaticResource TextExtraLarge}"/>
    
</ResourceDictionary>