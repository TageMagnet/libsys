<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LibrarySystem.Assets.Styles">
    
    <Style x:Key="TextExtraSmall" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="12"/>
    </Style>

    <Style x:Key="TextSmall" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="14"/>
    </Style>

    <Style x:Key="TextNormal" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="16"/>
    </Style>

    <Style x:Key="TextLarge" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="18"/>
    </Style>

    <Style x:Key="TextExtraLarge" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="20"/>
    </Style>
    
</ResourceDictionary>