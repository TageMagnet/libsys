<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LibrarySystem.Assets.Styles">
    
    <!--Primary Color-->
    <Color x:Key="Primary">#607d8b</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"></SolidColorBrush>

    <!--Secondary Color-->
    <Color x:Key="Secondary">#f9aa33</Color>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"></SolidColorBrush>

    <!--Whites-->
    <Color x:Key="White">#f9f9f9</Color>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"></SolidColorBrush>
    
</ResourceDictionary>